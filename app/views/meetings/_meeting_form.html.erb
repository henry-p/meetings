<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "flash #{name}"%>
<% end %>


<div id="meeting-form">
  <%= render "underscore_templates" %>
  <%= render "add_contacts" %>

  <%= form_for @meeting do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>

    <%= render "timezone_select" %><br>

    <%= f.label :start_time %><br>
    <%= render "datetimepicker_start" %>

    <%= f.label :end_time %><br>
    <%= render "datetimepicker_end" %><br>

    <%= button_tag "Submit" %>
  <% end %>
</div>

