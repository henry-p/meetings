<!DOCTYPE html>
<html>
<head>
  <title>Standup</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class = "<%= 'meeting-body' if @showing_meeting %>" >
<% if logged_in? %>
  <header>
    <div class='container'>
      <a href="<%= profile_path %>" id='standup'>Standup</a>
      <span id='nav-bar'>
        <% if current_user.image_path %>
          <%= link_to (image_tag current_user.image_path, id: 'header-google-img'), profile_path %>
        <% end %>
        <%= link_to "Meetings", profile_path %>
        <%= link_to "Archive", profile_archive_path %>
        <%= link_to "Logout", logout_path, method: :delete %>
    </div>
  </header>
<% end %>

<%= yield %>

</body>
</html>