<h2><%= @meeting.title  %></h2>
<h3><%= Meeting.format_timestamp @meeting.start_time %></h3>

<h4>Agenda Topics</h4>
<ul>
  <% @meeting.agenda_topics.each do |agenda_topic| %>
    <li>
      <h5><%= agenda_topic.content %></h5>
      <br>
      <% if agenda_topic.conclusion %>
        <%= agenda_topic.conclusion.content %>
      <% end %>
    </li>
  <% end %>
</ul>

<br>

<h4>Actionables</h4>
<ul>
  <% @meeting.actionables.each do |actionable| %>
    <li>
      <h5><%= actionable.content %></h5>
    </li>
  <% end %>
</ul>

<br>

<h4>Notes</h4>
<%= @meeting.notes %>


